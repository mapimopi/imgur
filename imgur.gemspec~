# -*- encoding: utf-8 -*-
lib = File.expand_path('../lib/', __FILE__)
$:.unshift lib unless $:.include?(lib)
 
#require 'imgur'
 
Gem::Specification.new do |s|
  s.name        = "imgur"
  s.version     = "0.3"
  s.platform    = Gem::Platform::RUBY
  s.authors     = ["mapimopi"]
  s.email       = ["mapimopipi@gmail.com"]
  s.homepage    = "http://github.com/mapimopi/imgur"
  s.summary     = "imgur api v3"
  s.description = "Fork that works with imgur api v3"
 
  s.required_rubygems_version = ">= 1.3.6"
  s.rubyforge_project         = "imgur"
 
  s.add_development_dependency "rspec"
 
  s.files        = Dir.glob("{bin,lib}/**/*") + %w(LICENSE README.md ROADMAP.md CHANGELOG.md)
  s.executables  = ['imgur']
  s.require_path = 'lib'
end
